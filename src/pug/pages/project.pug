extends ../_template

mixin cases-item(img, kind, title)
  .cases-item
    a(href="#").cases-item__link
      .cases-item__img
        img(src="assets/img/case-" + img + ".jpg" alt="picture")
      .cases-item__descr
        span.cases-item__kind #{kind}
        h3.cases-item__title #{title}
        .cases-item__arr
          +svg('cases-arr')

block variables
  - var title       = 'White Rabbit'
  - var description = 'White Rabbit'
  - var ogtitle     = 'White Rabbit'

block content
  .main-wrap.no-js
    //begin content
    main.main.project
      include ../sections/header
      include ../sections/project-top




      //h2.cases__bg Cases
      //begin cases__animation-icon
      //.cases__animation-icon
        include ../elements/scroll-or-swipe
      //end cases__animation-icon
      include ../sections/footer
    //end content

